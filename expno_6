import cv2
import matplotlib.pyplot as plt

# Read input image (COLOR)
img = cv2.imread("road.jpg")   # use your image name
img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)

# Resize images
bigger = cv2.resize(img_rgb, None, fx=1.8, fy=1.8, interpolation=cv2.INTER_LINEAR)
smaller = cv2.resize(img_rgb, None, fx=0.4, fy=0.4, interpolation=cv2.INTER_AREA)

# Print sizes (IMPORTANT PROOF)
print("Original Image Size :", img_rgb.shape)
print("Bigger Image Size   :", bigger.shape)
print("Smaller Image Size  :", smaller.shape)

# Show images in separate windows (NO auto-scaling issue)
plt.figure(figsize=(4,3))
plt.title("Original Image")
plt.imshow(img_rgb)
plt.axis('off')
plt.show()

plt.figure(figsize=(7,5))
plt.title("Bigger Image")
plt.imshow(bigger)
plt.axis('off')
plt.show()

plt.figure(figsize=(3,2))
plt.title("Smaller Image")
plt.imshow(smaller)
plt.axis('off')
plt.show()
